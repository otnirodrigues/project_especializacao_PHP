{% extends 'base.html.twig' %}

{% block title %}SB ✅{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Lista de Contas Bancárias</h1>
    <div>
        

        {% if contas|length > 0 %}
            {% for conta in contas %}
                <div class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
                    
                    <h4> Numero da Conta: {{ conta.numero}}</h4>
                    <h4> Usuário da Conta:{{ conta.user}}</h4>
                    <h4> Saldo da Conta:{{ conta.saldo}}</h4>
                    <h4> Agencia da Conta:{{ conta.agencia}}</h4>

                    <div>
                        <a href="{{ path('app_gerente_sacar', {id:app.user.id, conta:conta.id}) }}">
                            <button class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Sacar</button>
                        </a>
                        <a href="{{ path('app_gerente_depositar', {id:app.user.id, conta:conta.id}) }}">
                            <button class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Depositar</button>
                        </a>
                        <a href="{{ path('app_gerente_tranferir', {id:app.user.id, conta:conta.id}) }}">
                            <button class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Transferir</button>
                        </a>
                        <a href="{{ path('app_gerente_agencia_listar', {id:app.user.id}) }}">
                            <button class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Voltar</button>
                        </a>
                    </div>
                    <div>

                        {% if transacao |length > 0 %}
                        <ul> {% for tran in transacao %}
                            <li>
                                <h4> ______________________________________________</h4>
                                <h4> Transação Tipo:  {{ tran.descricao }}</h4>
                                <h4> Realizada: {{ tran.data|date("d/m/Y")}}</h4>
                                <h4> Valor: {{ tran.valor }}</h4>
                                <h4> Número da conta de Envio: {{ tran.contaRemetente}}</h4>
                                <h4> Número da conta destino: {{ tran.contaDestino}}</h4>
                                
                            </li>
                            {% endfor %}
                        </ul> 
                        {% else %}
                                Nenhuma Conta Cadastrada
                        {% endif %}
                    </div>

            {% endfor %}
        </ul> 
        {% else %}
             Nenhuma Conta Cadastrada
         {% endif %}

    </div>
           

    <a href="{{ path('app_home_page') }}">
            <button class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Voltar</button>
    </a>

</div>

{% endblock %}

