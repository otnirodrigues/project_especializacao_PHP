{% extends 'base.html.twig' %}

{% block title %}Hello GerenteController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
        
        {% if minhaAgencia|length > 0 %}
            {% for agencia in minhaAgencia %}
                    <h4>Nome: {{ agencia.nome}}</h4>
                    <h4>Endereço: {{agencia.rua}} - {{agencia.bairro}} n° {{agencia.numero}}. {{agencia.cidade}} - {{agencia.uf}}</h4>
                    <h4>Gerente: {{agencia.gerente}}</h4>
                    
              
            {% endfor %}
        {% else %}
             Nenhuma Agencia Cadastrada
        {% endif %}
    </div>

    <div>
        <a href="{{ path('app_gerente_agencia_conta_listar') }}" class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
            Acessar Contas Agencia
        </a>
        <a href="{{ path('app_home_page') }}" class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
            Voltar
        </a>
    </div>

    
</div>
{% endblock %}
