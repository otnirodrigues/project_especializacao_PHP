{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<form action="{{ path('app_login') }}" method="POST">
    <div>
        <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Email</label>
        <input 
            type="text"
            name="_username"
    </div>
    <div>
        <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Password</label>
        <input 
            type="password"
            name="_password"
    </div>
        <input type="hidden" name="_target_path" value="/agencia" />
    <div>
        <button type="submit" class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
            Login
        </button>
    </div>
    <div>
        <a href="{{ path('app_home_page') }}" class=" bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
            Cancelar
        </a>
    </div>
</form> 
{% endblock %}

